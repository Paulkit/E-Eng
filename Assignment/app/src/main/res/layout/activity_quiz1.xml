<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anthony.assignment.Quiz1">

    <Button
        android:id="@+id/button_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_weight="1"
        android:background="@color/table_cell"
        android:text="Start"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:visibility="invisible"
        android:onClick="startQuiz"
        />

    <TextView
        android:id="@+id/tv_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="TextView"
        android:visibility="invisible"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_Life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:visibility="invisible"
        android:textSize="25sp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Definitions"
        android:maxLines="10"
        android:layout_below="@+id/tv_Score"
        android:layout_alignLeft="@+id/tv_Score"
        android:layout_alignStart="@+id/tv_Score"
        android:visibility="invisible"
        android:textSize="20sp"
        android:scrollbars="vertical"

        />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Input"
        android:layout_below="@+id/tv_Definitions"
        android:layout_alignLeft="@+id/tv_Definitions"
        android:layout_alignStart="@+id/tv_Definitions"
        android:visibility="invisible"
        android:textSize="20sp"
        android:padding="25dp"
        android:textAlignment="center"
        android:scrollbars="vertical"

        />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_Input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></LinearLayout>

</RelativeLayout>
